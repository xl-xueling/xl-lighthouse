<assembly>
    <id>docker-upgrade-support</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <files>
        <file>
            <source>${project.parent.basedir}/docker-support/docker-compose-prod.yml</source>
            <outputDirectory>/upgrade-files</outputDirectory>
            <destName>docker-compose.yml</destName>
            <fileMode>0644</fileMode>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/docker-support</directory>
            <excludes>
                <exclude>docker-compose-*.yml</exclude>
            </excludes>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/upgrade-files</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/templates/mysql</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/upgrade-files/templates/mysql</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/templates/redis</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/upgrade-files/templates/redis</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/templates/nginx</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/upgrade-files/templates/nginx</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/templates/lighthouse</directory>
            <includes>
                <include>conf/*</include>
            </includes>
            <outputDirectory>/upgrade-files/templates/lighthouse</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/lighthouse-docker-support</directory>
            <includes>
                <include>upgrade.sh</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>