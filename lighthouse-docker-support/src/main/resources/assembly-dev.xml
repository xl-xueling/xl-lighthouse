<assembly>
    <id>docker-support-dev</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <files>
        <file>
            <source>${project.parent.basedir}/docker-support/docker-compose-dev.yml</source>
            <outputDirectory>/</outputDirectory>
            <destName>docker-compose.yml</destName>
            <fileMode>0644</fileMode>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/docker-support</directory>
            <excludes>
                <exclude>docker-compose-*.yml</exclude>
            </excludes>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/config/</directory>
            <includes>
                <include>**/standalone-*</include>
            </includes>
            <outputDirectory>/config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/templates/mysql</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/templates/mysql</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/templates/redis</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/templates/redis</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/templates/nginx</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/templates/nginx</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/templates/lighthouse</directory>
            <excludes>
                <exclude>conf/ice*</exclude>
                <exclude>conf/*cluster*</exclude>
            </excludes>
            <includes>
                <include>conf/*</include>
            </includes>
            <outputDirectory>/templates/lighthouse</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/docker-support/docker</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/docker</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/lighthouse-assembly/target/lib/</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/docker/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/light-webapps</directory>
            <excludes>
                <exclude>/node_modules/**</exclude>
                <exclude>/node/**</exclude>
                <exclude>/build/config.json</exclude>
            </excludes>
            <includes>
                <include>/build/**</include>
            </includes>
            <outputDirectory>/docker/light-webapps</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/bin/templates/lighthouse/light-webapps/public/</directory>
            <includes>
                <include>config.json</include>
            </includes>
            <outputDirectory>/docker/light-webapps/build/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>