<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property>
        <name>lighthouse.cluster.id</name>
        <value>${ldp_lighthouse_cluster_id}</value>
    </property>
    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>jdbc:mysql://${ldp_mysql_master}:3906/cluster_${ldp_lighthouse_cluster_id}_ldp_mysqldb?useUnicode=true&amp;characterEncoding=UTF-8&amp;useCursorFetch=true&amp;defaultFetchSize=100&amp;serverTimezone=${ldp_lighthouse_timezone}</value>
    </property>
    <property>
        <name>javax.jdo.option.driverClassName</name>
        <value>com.mysql.cj.jdbc.Driver</value>
    </property>
    <property>
        <name>javax.jdo.option.ConnectionUserName</name>
        <value>${ldp_mysql_operate_user}</value>
    </property>
    <property>
        <name>javax.jdo.option.ConnectionPassword</name>
        <value>${ldp_mysql_operate_user_passwd}</value>
    </property>
    <property>
        <name>kafka.bootstrap.servers</name>
        <value>${ldp_kafka_brokers_port}</value>
    </property>
    <property>
        <name>kafka.topic.name</name>
	<value>${ldp_kafka_topic_name}</value>
    </property>
    <property>
        <name>redis.cluster</name>
        <value>${ldp_redis_cluster}</value>
    </property>
    <property>
        <name>redis.cluster.password</name>
        <value>${ldp_redis_cluster_passwd}</value>
    </property>
    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>${ldp_zookeeper_nodes_ips}</value>
    </property>
    <property>
        <name>hbase.zookeeper.quorum.port</name>
        <value>2181</value>
    </property>
    <property>
        <name>lighthouse.ice.locators</name>
        <value>${ldp_lighthouse_ice_locators}</value>
    </property>
    <property>
        <name>limiting.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>limiting.group.message.size.per.sec</name>
        <value>30000</value>
    </property>
    <property>
        <name>limiting.stat.result.size.per.sec</name>
        <value>3000</value>
    </property>
</configuration>
